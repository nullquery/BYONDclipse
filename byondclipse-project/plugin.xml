<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="dmBuilder"
         name="DM Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="com.byonddev.byondclipse.project.builder.DMBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="dmNature"
         name="DM Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="com.byonddev.byondclipse.project.builder.DMNature">
         </run>
      </runtime>
      <builder
            id="byondclipse-project.dmBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="DM Project Nature commands"
            id="byondclipse-project.dmNature.category">
      </category>
      <command
            name="Add/RemoveDM Project Nature"
            defaultHandler="com.byonddev.byondclipse.project.builder.AddRemoveDMNatureHandler"
            categoryId="byondclipse-project.dmNature.category"
            id="byondclipse-project.addRemoveDMNature">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="byondclipse-project.addRemoveDMNature"
               label="Disable BYOND builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <test
                              value="byondclipse-project.dmNature"
                              property="org.eclipse.core.resources.projectNature">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="byondclipse-project.addRemoveDMNature"
               label="Enable BYOND builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <not>
                           <test
                                 value="byondclipse-project.dmNature"
                                 property="org.eclipse.core.resources.projectNature">
                           </test>
                        </not>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         id="dmProblem"
         name="DM Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>

</plugin>
